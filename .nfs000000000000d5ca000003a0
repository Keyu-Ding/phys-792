#include <iostream>
#include <TRandom3.h>
#include <TH1F.h>
#include <TCanvas.h>

void particle_physics()
{
	c1 = new TCanvas();
   c1->Seteid();
	
	Int_t n = 3;
   Double_t x[3]  = {0.01,0.1,1};
   Double_t y[3]  = {3.0,3.3,3.5};
	
	e = new TGraph(n,x,y);
   e->SetTitle("TeaphAsymmErrors Example");
   e->SetMarkerColor(4);
   e->SetMarkerStyle(21);
   e->Draw("P");
	
/*TH1F *e = new TH1F("e",40,0.01,10);
   e->SetPoint(0, 0.01, 3.0 );
   e->SetPoint(1, 0.1, 3.3 );
   e->SetPoint(2, 1, 3.5 );
   e->Draw("P");
   e->SetMarkerColor(kRed); 
	e->SetMarkerStyle(4); 
	e->SetMarkerSize(1.0);
*/
	TH1F *h = new TH1F("h","Project",40,0.01,10);
	
	
	h->GetXaxis()->SetRangeUser(0.01,10);
   h->GetYaxis()->SetRangeUser(0,50);
   h->GetYaxis()->SetTitleOffset(1.15);
   h->GetXaxis()->SetTitle("Momentum [GeV]");
   h->GetXaxis()->SetTitleFont(132);
   h->GetXaxis()->SetTitleSize(0.05);
   h->GetXaxis()->SetLabelSize(0.05);
   h->GetYaxis()->SetTitle("dE/dx[keV/cm]");
   h->GetYaxis()->SetTitleFont(132);
   h->GetYaxis()->SetTitleSize(0.05);
   h->GetYaxis()->SetLabelSize(0.05);

   h->Draw();
  
	
}
